apiVersion: v1
kind: Namespace
metadata:
  name: ns-km
  annotations:
    kubectl.kubernetes.io/last-applied-configuration: |
      {"apiVersion":"v1","kind":"Namespace","metadata":{"name":"ns-km"}}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: aiservice-deployment
  namespace: ns-km
spec:
  replicas: 1
  selector:
    matchLabels:
      app: aiservice
  template:
    metadata:
      labels:
        app: aiservice
    spec:
      containers:
      - name: aiservice
        image: {{ aiservice-imagepath }}
        ports:
        - containerPort: 8080
        resources:
          limits:
            cpu: "2"
            memory: "2Gi"
          requests:
            cpu: "1"
            memory: "1Gi"
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontapp-deployment
  namespace: ns-km
spec:
  replicas: 1
  selector:
    matchLabels:
      app: frontapp
  template:
    metadata:
      labels:
        app: frontapp
    spec:
      containers:
      - name: frontapp
        image: {{ frontapp-imagepath }}
        ports:
        - containerPort: 5900
        resources:
          limits:
            cpu: "2"
            memory: "2Gi"
          requests:
            cpu: "1"
            memory: "1Gi"